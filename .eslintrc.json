{
    "env": {
        "browser": true,
        "es2021": true,
        "react-native/react-native": true
    },
    "extends": [
        "plugin:react/recommended",
        "google",
        "prettier"
    ],
    "parser":"babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        // allow .js files to contain JSX code
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
         //require jdoc
         "require-jsdoc" : "off",
         //unused var
         "no-unused-vars": 2,
         //no console
         "no-console": "error",
         "no-eval": 2,
         "semi": [2, "always"],
         "react-native/no-color-literals": 0,
        "react-native/no-inline-styles": 0,
        "react/prop-types": 0,
        "no-unsafe-optional-chaining": 0
    }
}
